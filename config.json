{
  "system": {
    "name": "前庭功能检查报告系统",
    "version": "2.0.0",
    "theme": "blue",
    "font_size": 14,
    "window_size": {
      "width": 1500,
      "height": 900
    }
  },
  "database": {
    "path": "vest_database",
    "folders": ["report", "pic", "video", "HIS", "excel", "templates"]
  },
  "report_template": {
    "enabled_pages": [
      "database_management", "basic_info", "spontaneous_nystagmus", "head_shaking_test", "gaze_nystagmus", 
      "head_impulse_test", "head_impulse_suppression_test", "reverse_skew", "saccade",
      "visual_enhanced_vor", "vor_suppression", "visual_tracking", "optokinetic_nystagmus",
      "svv_test", "fistula_test", "dix_hallpike_test", "supine_roll_test", "other_position_test",
      "caloric_test", "cvemp_test", "ovemp_test", "conclusion"
    ],
    "output_format": "json",
    "file_naming": "{patient_id}_{timestamp}.json"
  }
}
